@model Dinner

<div class="container main-view">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form asp-controller="Dinners" asp-action="DeleteDinnerByID" asp-route-id="@Model.DinnerId" method="post">

                <h4>Delete Dinner Confirmation</h4>
                <p>Please confirm that you want to cancel the dinner titled <span><b style="color:maroon">@Model.Title</bstyle="color:maroon"></span></p>
                <p>
                    <button type="submit" class="btn btn-primary">Delete</button>
                    <button type="button" class="btn btn-danger" >Cancel</button>
                </p>
            </form>
        </div>
    </div>
</div>